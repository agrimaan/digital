# Server Configuration
PORT=3010
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/agrimaan_notifications
MONGODB_URI_TEST=mongodb://mongodb:27017/agrimaan_notifications_test

# JWT Configuration
JWT_SECRET=notification_service_secret_key
JWT_EXPIRY=7d

# Service API Keys (comma-separated)
SERVICE_API_KEYS=key1,key2,key3

# Service URLs
USER_SERVICE_URL=http://user-service:3002
FIELD_SERVICE_URL=http://field-service:3003
IOT_SERVICE_URL=http://iot-service:3004
CROP_SERVICE_URL=http://crop-service:3005
MARKETPLACE_SERVICE_URL=http://marketplace-service:3006
LOGISTICS_SERVICE_URL=http://logistics-service:3007
WEATHER_SERVICE_URL=http://weather-service:3008
ANALYTICS_SERVICE_URL=http://analytics-service:3009

# Service Registry
SERVICE_REGISTRY_URL=http://api-gateway:3001/register

# Logging
LOG_LEVEL=info

# Email Configuration
EMAIL_FROM=notifications@agrimaan.com
EMAIL_REPLY_TO=support@agrimaan.com

# SMS Configuration
SMS_FROM=AGRIMAAN

# Push Notification Configuration
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:notifications@agrimaan.com

# Cache Configuration
REDIS_URL=redis://redis:6379
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=*

# Scheduled Tasks
PROCESS_SCHEDULED_NOTIFICATIONS_INTERVAL=60000
PROCESS_EXPIRED_NOTIFICATIONS_INTERVAL=3600000